@{
    ViewData["Title"] = "Criar contato";
}
<div class="text-center">
    <br />
    <h1 class="display-4">Cadastrar contato</h1>
</div>
<form>
    <div class="form-group mb-4">
        <label for="Nome">Nome</label>
        <input type="text" class="form-control" placeholder="Digite o nome do contato">
    </div>

    <div class="form-group mb-4">
        <label for="email">E-mail</label>
        <input type="text" class="form-control" placeholder="Digite o e-mail do contato">
    </div>
    
    <div class="form-group mb-4">
        <label for="celular">Celular</label>
        <input type="number" class="form-control" placeholder="Digite o número do contato">
    </div>

    <button type="submit" class="btn btn-primary w-100 mb-3">Adicionar</button>  
    
</form>

    <a class="btn btn-secondary w-100" role="button" asp-controller="Contato" asp-action="index">Voltar</a>
